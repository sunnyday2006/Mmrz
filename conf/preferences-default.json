{
    // preference-default.json 为默认配置文件, 请勿修改

    // 用户配置请修改 preference-user.json, 完成配置后请重启程序

    // 若配置出错, 请删除 preference-user.json, 重新启动 MmrzGUI.rbw
    // 程序将自动重新拷贝 preference-default.json 然后生成 preference-user.json
    // 同时意味着恢复默认设置


    // 主窗口宽度, 默认值 400
    "MAIN_WIN_WIDTH": 400,

    // 主窗口高度, 默认值 230
    "MAIN_WIN_HEIGHT": 230,

    // 单词本窗口宽度, 默认值 800
    "WB_WIN_WIDTH": 800,

    // 单词本窗口高度, 默认值 500
    "WB_WIN_HEIGHT": 500,

    // 是否自动检查更新
    // true: 自动更新  false: 不自动更新
    "AUTO_CHECK_UPDATE": true,

    // Debug模式
    // 如果想导入后立即进入背诵周期而不用等待5分钟， 请设置为 true
    "DEBUG_MODE": false,

    // 是否用于编译生成 Windows下可执行文件
    // true: 用于生成 exe  false: 不用于生成 exe
    "MMRZ_BUILD_WINDOWS_EXE": false,

    // 是否使用 TTS 发音引擎
    // true: 使用  false: 不使用
    "USE_TTS_ENGINE": true,

    // 是否自动发音
    // true: 自动发音  false: 手动发音
    "AUTO_SPEAK": true,

    // 反转模式 (释义作为显示部分, 单词作为隐藏部分)
    // true: 启用反转模式  false: 正常模式
    "REVERSE_MODE": false,

    // 仅在反转模式为true时有效, 提取指定已背诵次数(memTimes)的单词
    "REVERSE_MODE_TIMES": 1,

    // 是否使用智能导入模式. 如果启用智能导入, 将会在导入单词本后将已经导入的单词从单词本中删除
    // true: 启用智能导入  false: 普通导入模式
    "SMART_IMPORT": false,

    // 是否随机挑选导入的单词, 仅在智能导入模式下有效
    // true: 随机导入模式  false: 顺序导入模式
    "RANDOM_PICK_UP": true,

    // 设定每次导入的单词数量, 仅在智能导入模式下有效
    "IMPORT_QUANTITY": 50,

    // 文件末尾标志， 并没有什么卵用， 不用管这个
    "END_OF_FILE": true
}